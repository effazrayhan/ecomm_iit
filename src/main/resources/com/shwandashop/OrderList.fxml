<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="com.shwandashop.OrderListController" prefHeight="900.0" prefWidth="1600.0" style="-fx-background-color: #efe7da;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <AnchorPane prefHeight="100.0" prefWidth="1600.0" style="-fx-background-color: #efe7dd;" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="returnToDashboardButton" layoutX="50.0" layoutY="30.0" mnemonicParsing="false" onAction="#onReturnToDashboard" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="← Return to Dashboard">
                    <font>
                        <Font name="DejaVuMathTeXGyre-Regular" size="18.0" />
                    </font>
                </Button>
                <Label layoutX="700.0" layoutY="30.0" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Order List" />
            </children>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane prefHeight="700.0" prefWidth="1600.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="orderTableView" layoutX="50.0" layoutY="40.0" prefHeight="600.0" prefWidth="1500.0">
                    <columns>
                        <TableColumn fx:id="orderIdCol" text="Order ID" prefWidth="100.0" />
                        <TableColumn fx:id="customerNameCol" text="Customer Name" prefWidth="200.0" />
                        <TableColumn fx:id="orderDateCol" text="Order Date" prefWidth="200.0" />
                        <TableColumn fx:id="totalAmountCol" text="Total Amount" prefWidth="150.0" />
                        <TableColumn fx:id="itemsCol" text="Items" prefWidth="700.0" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
