<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900" prefWidth="1600" style="-fx-background-color: #efe7da;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.shwandashop.ProductListController">
    <children>
        <Label layoutX="750" layoutY="40" style="-fx-font-size: 32px;" text="Product List" />
        <TableView fx:id="productTable" layoutX="200" layoutY="120" prefHeight="700" prefWidth="1200">
            <columns>
                <TableColumn prefWidth="200" text="Product ID" />
                <TableColumn prefWidth="400" text="Name" />
                <TableColumn prefWidth="200" text="Price" />
                <TableColumn prefWidth="200" text="Quantity" />
                <TableColumn prefWidth="200" text="onSale" />
            </columns>
        </TableView>
      <Button fx:id="returnButton" layoutX="1454.0" layoutY="53.0" mnemonicParsing="false" text="Return" onAction="#onReturnClick">
         <font>
            <Font name="DejaVuMathTeXGyre-Regular" size="23.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
